<h1>This is the Bookmarks show view</h1>

<div class="jumbotron">
<div class="container">
 <ul>
   <% if policy(@bookmark).edit? %>
      <%= link_to "Edit", edit_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success'%>
      <%= link_to "Delete", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data:{confirm: "Are you sure to delete this bookmark?"} %>
      <%= link_to 'Add Bookmark', new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
   <% end %>
 </ul>
  <div class="col-md-4">
    <p><h2> Bookmarks for topic - <%= @topic.title %> </h2></p>
    </div>
  <%= render partial: 'bookmarks/bookmarks' %>
</div>
</div>