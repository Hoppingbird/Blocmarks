<h1>This is the topics index view</h1>
<h1>Topics</h1>
<div class="jumbotron">
<h3><%= link_to "Create New Topic", new_topic_path, class: 'btn btn-success' %></h3>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to topic.title, topic %>
            </h4>
          </div>
        </div>
    <% end %>
  </div>
</div>
    </div>